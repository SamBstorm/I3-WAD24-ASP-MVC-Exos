<!DOCTYPE html>
<html lang="fr-be">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <h1>ASP MVC</h1>
        <nav>
            <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/Home/Contact">Nous contacter</a></li>
                <li><a href="/Auth/Register">S'enregistrer</a></li>
                <li><a href="/Auth/Login">Se connecter</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h1>Veuillez vous identifier :</h1>
            @if(TempData.ContainsKey("message")){
                <div style="width:80%;margin:0 auto;border:1px solid #001100; border-radius: 15px; padding : 15px; color : #001100; background-color : #99FF99">
                    <p>@TempData["message"]</p>
                </div>
            }
            <form method="post">
                <div>
                    <label for="email">Courriel : </label>
                    <input type="email" name="email" id="email" />
                </div>
                <div>
                    <label for="password">Mot de passe : </label>
                    <input type="password" name="password" id="password" />
                </div>
                <button type="submit">Se connecter</button>
            </form>
        </section>
    </main>
    <footer>
        <p>Samuel Legrain - Interface 3 Bruxelles</p>
    </footer>
</body>
</html>

