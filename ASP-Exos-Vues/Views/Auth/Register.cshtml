@using ASP_Exos_Vues.Models.Auth
@model RegisterForm
<!DOCTYPE html>
<html lang="fr-be">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>ASP MVC</h1>
        <nav>
            <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/Home/Contact">Nous contacter</a></li>
                <li><a href="/Auth/Register">S'enregistrer</a></li>
                <li><a href="/Auth/Login">Se connecter</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h1>S'enregistrer</h1>
            @using (Html.BeginForm(FormMethod.Post, new { @class = "col-6 container-md" }))
            {
                <div>
                    @Html.LabelFor(m => m.LastName, new { @class = "form-label"})
                    @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control"}})
                    @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger"})
                </div>
                <div>
                    @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                    @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
                </div>
                <div>
                    @Html.LabelFor(m => m.BirthDate, new { @class = "form-label" })
                    @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.BirthDate, null, new { @class = "text-danger" })
                </div>
                <div>
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                </div>
                <div>
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                </div>
                <div>
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text-danger" })
                </div>
                <button type="submit">S'enregistrer</button>
            }
        </section>
    </main>
    <footer>
        <p>Samuel Legrain - Interface 3 Bruxelles</p>
    </footer>
</body>
</html>

